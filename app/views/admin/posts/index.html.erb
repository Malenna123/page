        <div class="col-md-9">
            <table class="table table-bordered table-striped table-hover">
            	<thead>
            		<tr>
            			<th>Title</th>
            			<th>Content</th>
            			<th>delete</th>
            			<th>Edit</th>
            		</tr>
            	</thead>
            	<tbody>
					<% @posts.each do |post| %>
					<tr>
						<td><%= link_to post.title, admin_post_path(post) %></td>
						<td><p><%= post.content.truncate(100) %></p></td>
						<td><%= link_to "delete",[:admin,post],class: "btn btn-primary" %></td>
						<td><%= link_to "edit",edit_admin_post_path(post),class: "btn btn-warning" %></td>
						
					</tr>
					<% end %>
				</tbody>
            </table>
            <%= paginate @posts %>
	    </div>	

