<div class="col">
	   	<%= form_for [:admin,@post] do |f| %>
    	<div class="form-group">
    		<%= f.label :content %>
    		<%= f.text_area :content,class: 'form-control',rows: "20"   %>
    	</div>
    	<div class="form-group">
    		<%= f.label :title %>
    		<%= f.text_field :title,class: 'form-control' %>
    	</div>
    	<div class="form-group">
    		<%= f.label :image %>
    		<%= f.file_field :image,class: 'form-control' %>
    	</div>
    	<div class="form-group">
    		<%= f.submit class: 'btn btn-primary'  %>
    	</div>
    	<% end %>
</div>